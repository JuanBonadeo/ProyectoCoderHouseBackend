<h1>Formulario para agregar un producto </h1>

<form action="" id="add-product-form">
    <label>Título:</label>
    <input style="margin-bottom: 0.5rem" id="title">
    <br>

    <label>Descripción:</label>
    <input style="margin-bottom: 0.5rem" id="description">
    <br>

    <label>Precio:</label>
    <input style="margin-bottom: 0.5rem" id="price">
    <br>

    <label>Code:</label>
    <input style="margin-bottom: 0.5rem" id="code">
    <br>

    <label>Stock:</label>
    <input style="margin-bottom: 0.5rem" id="stock">
    <br>

    <label>Categoría:</label>
    <input style="margin-bottom: 0.5rem" id="category">
    <br>


    <button type="submit" id="add-product-btn">Agregar producto</button>
</form>

<h1>Productos en tiempo real: </h1>
<div id="products-container">
  {{#each products}}
<div style="border: 1px solid #000; border-radius: 1rem; padding: 1rem; margin-bottom: 1rem">
  <p>Title: {{this.title}}</p>
  <p>Description: {{this.description}}</p>
  <p>Price: {{this.price}}</p>
  <p>Stock: {{this.stock}}</p>

  <input id="{{this._id}}" type="number">
  <button onclick='addToCart("{{this.stock}}", "{{this._id}}")'>AGREGAR AL CARRITO</button>
</div>
{{/each}}
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>